<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="46sp"
    android:background="@drawable/item_list_shape"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingStart="24sp"
    android:layout_marginBottom="14sp">


    <TextView
        android:id="@+id/password_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:textColor="@color/text_main"
        android:text="test"
        android:gravity="center_vertical"
        android:textSize="18sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/settings_button"
        android:layout_width="47sp"
        android:layout_height="match_parent"
        android:background="@drawable/item_list_settings_shape"
        android:layout_alignParentEnd="true"
        android:drawableTop="@drawable/ic_baseline_settings_24"
        android:drawableTint="@color/text_main"
        android:paddingTop="10sp"
        />


</RelativeLayout>